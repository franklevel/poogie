<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>com.github.franklevel.poogir.desktop</id>
    <metadata_license>CC0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Poogie</name>
    <summary>Generate secure password easier</summary>
    <description>
        <p>Track the virtual currencies in real world currency value with this handy applet</p>
        <ul>
            <li>Choose which currency and virtual currency to use for tracking</li>
            <li>Quit anytime with the shortcut Ctrl + Q</li>
            <li>Move the applet by dragging it from anywhere in the window</li>
            <li>Stays out of your way in the desktop</li>
        </ul>
    </description>
    <provides>
        <binary>com.github.franklevel.poogie</binary>
    </provides>
    <developer_name>Lains</developer_name>
    <url type="homepage">https://github.com/franklevel/poogie/</url>
    <url type="bugtracker">https://github.com/franklevel/poogie/issues</url>
    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/franklevel/poogie/master/data/shot.png</image>
        </screenshot>
    </screenshots>
    <releases>
        <release version="1.2.0" date="2018-02-01">
            <description>
                <p>Release: Minor Payments</p>
                <ul>
                    <li>Minor fixes all around.</li>
                </ul>
            </description>
        </release>        
    </releases>
    <custom>
        <value key="x-appcenter-color-primary">#badbad</value>
        <value key="x-appcenter-color-primary-text">#212121</value>
    </custom>
</component>
